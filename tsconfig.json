{
  "compilerOptions": {
    "target": "es2016",                                 
    "module": "commonjs",                               
    "baseUrl": "src",                                 
    "sourceMap": true,                              
    "outDir": "dist",                                  
    "esModuleInterop": true,                            
    "forceConsistentCasingInFileNames": true,        
    "strict": true,                                  
    "noImplicitAny": true,                           
    "skipLibCheck": true                                
  },
  "include": ["src/**/*"]
}